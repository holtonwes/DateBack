        <DatePicker x:Name="StartingDatePicker" HorizontalAlignment="Left" Margin="31,38,0,0" VerticalAlignment="Top"/>
        <Label Content="Add \ Subtract Days:" HorizontalAlignment="Left" Margin="188,38,0,0" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="DaysAddSubtractTextBox" HorizontalAlignment="Left" Height="23" Margin="327,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="CalculateButton" Content="Calculate" HorizontalAlignment="Left" Margin="522,38,0,0" VerticalAlignment="Top" Width="76" Click="CalculateButton_Click"/>
        <Label x:Name="ResultsLabel" Content="" HorizontalAlignment="Left" Margin="31,92,0,0" VerticalAlignment="Top" Width="567" Height="120"/>

    </Grid>
</Window>
